extends ../layout

block content
	.row
		.large-12.columns
			form(name="new_book", method="post", action="/books")
				label Title
				input(type="text", name="title", placeholder="JAVAJAVAJAVA")
				label Author
				input(type="text", name="author", placeholder="Yo Yo Mama")
				label ISBN
				input(type="text", name="isbn", placeholder="12121212121212121")
				label Description
				textarea(name="description", placeholder="LOLOLOLOLOLOLOLOLOLOLOLOLOLOL")
				input.button(type="submit", name="create_book", value="Add this book to shelf!")